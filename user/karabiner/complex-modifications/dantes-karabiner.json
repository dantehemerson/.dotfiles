{
  "title": "Dante's Karabiner",
  "rules": [
    {
      "description": "Focus app with shortcuts",
      "manipulators": [
        {
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": ["right_command"]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Google Chrome.app'"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["right_command"]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Postman.app'"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": ["right_command"]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Terminal.app'"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": ["right_command"]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Slack.app'"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["right_command"]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Notes.app'"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": ["right_command"]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Visual Studio Code.app'"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": ["right_command"]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Finder.app'"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Preview.app - VIM: map jk (down/up)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j"
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.apple.Preview$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k"
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.apple.Preview$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
