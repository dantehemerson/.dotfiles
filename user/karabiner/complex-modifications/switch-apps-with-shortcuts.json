{
  "title": "Switch apps with shortcuts",
  "rules": [
    {
      "description": "With Right Command",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_gui"
          },
          "to": [
            {
              "set_variable": {
                "name": "modifier_down_flag",
                "value": true
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "modifier_down_flag",
                "value": false
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "p"
          },
          "to": [
            {
              "shell_command": "open -a 'Postman.app'"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "modifier_down_flag",
              "value": true
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "c"
          },
          "to": [
            {
              "shell_command": "open -a 'Google Chrome.app'"
            }
