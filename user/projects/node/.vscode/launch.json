{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run single test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/${relativeFile}",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node",
    },
    {
      "name": "Build and Run single test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/${relativeFile}",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build Node",
      "runtimeExecutable": "${workspaceFolder}/node"
    }
  ]
}
